<section class="container">
  
  {{#if loggedIn}}
  <section class="flex-row justify-center">
    {{#each blogposts as |blogpost|}}
    <div>
    <h2>
      {{blogpost.title}}
    </h2>
    <h4>date: {{format_date blogpost.createdAt}}</h4>
    <p>
      {{blogpost.content}}
    </p>
  </div>
    {{/each}}
  </section>
</section>
{{else}}
<a href="/login">You must login first to view this page</a>
{{/if}}